[
  {
    "id": "button_text",
    "name": "button_text",
    "label": "Button text",
    "required": true,
    "allow_new_line": false,
    "show_emoji_picker": false,
    "type": "text",
    "default": "Add a button link here"
  },
  {
    "label": "Button options",
    "name": "button_options",
    "type": "group",
    "children": [
      {
        "id": "button_link_toggle",
        "name": "button_link_toggle",
        "label": "Use as link",
        "required": false,
        "type": "boolean",
        "default": false
      },
      {
        "id": "button_icon_toggle",
        "name": "button_icon_toggle",
        "label": "Add icon",
        "required": false,
        "type": "boolean",
        "default": false
      }
    ]
  },
  {
    "id": "button_link",
    "name": "button_link",
    "label": "Button link",
    "required": false,
    "supported_types": ["EXTERNAL", "CONTENT", "FILE", "EMAIL_ADDRESS", "BLOG"],
    "type": "link",
    "visibility": {
      "controlling_field": "button_link_toggle",
      "controlling_value_regex": "true",
      "operator": "EQUAL",
      "access": null,
      "hidden_subfields": null
    },
    "default": {
      "url": {
        "type": "EXTERNAL",
        "href": "www.hubspot.com",
        "content_id": null
      },
      "open_in_new_tab": false,
      "no_follow": false
    }
  },
  {
    "label": "Icon",
    "name": "button_icon",
    "type": "group",
    "children": [
      {
        "name": "icon",
        "label": "",
        "type": "icon",
        "required": false,
        "visibility": {
          "controlling_field": "button_icon_toggle",
          "controlling_value_regex": "true",
          "operator": "EQUAL",
          "access": null,
          "hidden_subfields": null
        }
      },
      {
        "label": "Position",
        "name": "icon_position",
        "type": "choice",
        "required": false,
        "sortable": false,
        "display": "select",
        "choices": [["left", "Left"], ["right", "Right"]],
        "default": "left",
        "visibility": {
          "controlling_field": "button_icon_toggle",
          "controlling_value_regex": "true",
          "operator": "EQUAL",
          "access": null,
          "hidden_subfields": null
        }
      }
    ]
  },
