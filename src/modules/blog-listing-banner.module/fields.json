[
  {
    "label": "Banner image",
    "name": "banner_image",
    "type": "image",
    "resizable": true,
    "responsive": true,
    "required": true,
    "default": {
      "size_type": "auto",
      "src": "",
      "alt": ""
    }
  },
  {
    "label": "Title",
    "name": "title",
    "type": "text"
  },
  {
    "label": "Subtitle",
    "name": "subtitle",
    "type": "text"
  },
  {
    "label": "Override default style",
    "name": "override_default_style",
    "id": "override_default_style",
    "type": "boolean",
    "default": false
  },
  {
    "id": "style",
    "name": "style",
    "label": "Style options",
    "type": "group",
    "children": [
      {
        "label": "Title color",
        "name": "title_color",
        "visibility": {
          "controlling_field": "override_default_style",
          "controlling_value_regex": "true",
          "operator": "EQUAL"
        },
        "type": "color",
        "default": {
          "color": "#ffffff",
          "opacity": 100
        }
      },
      {
        "label": "Subtitle color",
        "name": "subtitle_color",
        "visibility": {
          "controlling_field": "override_default_style",
          "controlling_value_regex": "true",
          "operator": "EQUAL"
        },
        "type": "color",
        "default": {
          "color": "#ffffff",
          "opacity": 100
        }
      }
    ]
  }
]
